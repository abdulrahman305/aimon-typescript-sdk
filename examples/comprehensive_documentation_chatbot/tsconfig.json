{
  "compilerOptions": {
    "target": "ES2022",           
    "module": "ES2022",        
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}